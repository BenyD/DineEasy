# =============================================================================
# DineEasy Platform Environment Variables
# =============================================================================
# Copy this file to .env.local and fill in your actual values
# =============================================================================

# =============================================================================
# APP CONFIGURATION
# =============================================================================

# Your app's base URL (for development, use http://localhost:3000)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Development port (optional, defaults to 3000)
PORT=3000

# =============================================================================
# SUPABASE CONFIGURATION
# =============================================================================

# Supabase project URL (get from your Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous key (public, safe to expose)
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here

# Supabase service role key (private, keep secret)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# =============================================================================
# STRIPE CONFIGURATION
# =============================================================================

# Stripe secret key (private, keep secret)
STRIPE_SECRET_KEY=sk_test_your-stripe-secret-key-here

# Stripe publishable key (public, safe to expose)
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your-stripe-publishable-key-here

# Stripe webhook secret (private, keep secret)
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret-here

# =============================================================================
# STRIPE PRICE IDs (CHF CURRENCY)
# =============================================================================

# Starter Plan - Monthly (CHF 34.99)
STRIPE_STARTER_MONTHLY_CHF_PRICE_ID=price_starter_monthly_chf_here

# Starter Plan - Yearly (CHF 334.99)
STRIPE_STARTER_YEARLY_CHF_PRICE_ID=price_starter_yearly_chf_here

# Pro Plan - Monthly (CHF 94.99)
STRIPE_PRO_MONTHLY_CHF_PRICE_ID=price_pro_monthly_chf_here

# Pro Plan - Yearly (CHF 911.99)
STRIPE_PRO_YEARLY_CHF_PRICE_ID=price_pro_yearly_chf_here

# Elite Plan - Monthly (CHF 239.99)
STRIPE_ELITE_MONTHLY_CHF_PRICE_ID=price_elite_monthly_chf_here

# Elite Plan - Yearly (CHF 2294.99)
STRIPE_ELITE_YEARLY_CHF_PRICE_ID=price_elite_yearly_chf_here

# =============================================================================
# EMAIL CONFIGURATION (RESEND)
# =============================================================================

# Resend API key for sending emails
RESEND_API_KEY=re_your-resend-api-key-here

# =============================================================================
# GOOGLE ANALYTICS (OPTIONAL)
# =============================================================================

# Google Analytics ID (optional, for tracking)
NEXT_PUBLIC_GA_ID=G-XXXXXXXXXX

# =============================================================================
# GOOGLE BUSINESS INTEGRATION (OPTIONAL)
# =============================================================================

# Google OAuth Client ID (for Google Business integration)
GOOGLE_CLIENT_ID=your-google-client-id-here

# Google OAuth Client Secret (for Google Business integration)
GOOGLE_CLIENT_SECRET=your-google-client-secret-here

# Google OAuth Redirect URI (for Google Business integration)
GOOGLE_REDIRECT_URI=http://localhost:3000/api/google-business/callback

# =============================================================================